@page "{id}"
@model FrontEndApp.Pages.Notes.Delete
@{
    ViewData["Title"] = "Supprimer la note";
}

<h2>Supprimer la note</h2>

@if (Model.Note == null)
{
    <div class="alert alert-danger">Note introuvable.</div>
    <a asp-page="/Notes/Index" class="btn btn-secondary">Retour</a>
}
else
{
    <div class="alert alert-warning">
        <h5 class="mb-3">Voulez‑vous vraiment supprimer cette note&nbsp;?</h5>

        <p><strong>ID :</strong> @Model.Note.Id</p>
        <p><strong>Patient ID :</strong> @Model.Note.patId</p>
        <p><strong>Contenu :</strong></p>
        <pre class="border p-2">@Model.Note.content</pre>

        <form method="post">
            <input type="hidden" asp-for="Note.Id" />
            <button type="submit" class="btn btn-danger">🗑 Confirmer la suppression</button>
            <a asp-page="/Notes/Index" class="btn btn-secondary ms-2">Annuler</a>
        </form>
    </div>
}
