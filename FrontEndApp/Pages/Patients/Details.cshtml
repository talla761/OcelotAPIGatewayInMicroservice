@page "{id:int}"
@model FrontEndApp.Pages.Patients.Details
@{
    ViewData["Title"] = "Détails du patient";
}

<h1>Détails du patient</h1>

@if (Model.Patient != null)
{
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Patient.Prenom @Model.Patient.Nom</h5>
            <p class="card-text"><strong>Date de naissance :</strong> @Model.Patient.DateNaissance.ToString("yyyy-MM-dd")</p>
            <p class="card-text"><strong>Genre :</strong> @Model.Patient.Genre</p>
            <p class="card-text"><strong>Adresse :</strong> @Model.Patient.AdressePostale</p>
            <p class="card-text"><strong>Téléphone :</strong> @Model.Patient.NumeroTelephone</p>
        </div>
    </div>

    <h4>Notes médicales</h4>

    @if (Model.Notes is null || Model.Notes.Count == 0)
    {
        <p><em>Aucune note trouvée.</em></p>
    }
    else
    {
        <ul>
            @foreach (var note in Model.Notes)
            {
                <li>
                    <strong>@note.CreatedAt.ToString("dd MMM yyyy")</strong> : @note.Content
                </li>
            }
        </ul>
    }


    @if (!string.IsNullOrEmpty(Model.RiskLevel))
    {
        <h4 class="mt-4 text-danger">Évaluation du risque de diabète</h4>
        <div class="alert alert-warning">
            <strong>Niveau de risque :</strong> @Model.RiskLevel
        </div>
    }

}
else
{
    <div class="alert alert-danger">Patient non trouvé.</div>
}

<a asp-page="./Index" class="btn btn-secondary mt-3">Retour à la liste</a>
